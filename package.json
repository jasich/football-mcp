{
  "name": "app",
  "private": true,
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=public/assets --public-path=/assets --loader:.js=jsx --loader:.jsx=jsx",
    "watch": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=public/assets --public-path=/assets --loader:.js=jsx --loader:.jsx=jsx --watch"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.11"
  }
}
